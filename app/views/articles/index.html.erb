<div class="blog-header">
<h1 class="blog-title">Listing Articles</h1>
</div>

<%= link_to 'New Artcle', new_article_path %>
<div class="row">
  <div class="col-sm-8 blog-main">
  <% @articles.each do |article| %>
    <div class="blog-post">
      <h2 class="blog-post-title"><%= article.title %></h2>
      <p><%= article.text %></p>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you confirm!'} %></td>
    </div>
  <% end %>
</div>
</div>
